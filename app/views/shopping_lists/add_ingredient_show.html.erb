<div class="container" style="overflow-x:auto;display: flex;justify-content: center;">
	<table style="border: 1px black solid; box-sizing: border-box;box-shadow: 0px 2px 18px 0px rgba(0,0,0,0.5); cursor: pointer; ">
  		<thead>
  			<tr>
  				<th colspan="2" style="text-align: center;background-color: green;color: white;">Ajout d'ingrédients</th>
  			</tr>
  			<tr>
  				<th style="border: 1px black solid; padding-left: 5px; padding-right: 5px;text-align: center;">Ingrédients</th>
  				<th style="border: 1px black solid; padding-left: 5px; padding-right: 5px;text-align: center;">Ajout</th>
  			</tr>
  		</thead>
  		<tbody>
  				<tr>
					<td  style="border: 1px black solid; padding-left: 5px; padding-right: 5px; text-align: center;">
						<%= form_for :ingredient, url: {action: "add_ingredient"} do |f| %>
			              <%= f.collection_select :ingredient_id, @ingredients.order(:name),:id,:name, {include_blank: false}, {class: "form-control"} %>
					</td>
					<td  style="border: 1px black solid; padding-left: 5px; padding-right: 5px;padding-top: 5px;padding-bottom: 5px; text-align: center; color: white;">
						<button type="submit" class="default-btn mid-button theme-color">Ajouter</button>
					</td>
					<% end %>
		</tbody>
    </table>
</div>
<br>

