                                            <%= image_tag element.picture_url %>
                                        <% else %>
            							 <%= image_tag('main-recipe1.jpg', alt: "image") %>
                                        <% end %>
                                    <% end %>

                                </div>
                                <div class="outer-detail">
                                    <div class="detail">
                                        <h3>
                                            <%= link_to element.name, meal_path(element.id)%>
                                        </h3>
                                        <div class="short-separator">
                                        </div>          
                                    </div>
                                </div>
                            </div>
                            <% end %>
                            <!--single recipe ends-->
