
<div class=" devise">
    <div class="connexion  ">
        <div class="panel">
              <h2>Se connecter</h2>
                 <p>Veuillez entrer votre email et mot de passe</p>
             </div>

          	     <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
            		 <%= devise_error_messages! %>

                <div class="field form-group">
                  <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder:"Votre pseudo", class: "form-control" %>
                </div>

                <div class="field form-group">
                  <%= f.password_field :password, autocomplete: "current-password", placeholder:"Votre pseudo", class: "form-control" %>
                </div>

                <% if devise_mapping.rememberable? -%>
                  <div class="field form-group">
                    <%= f.check_box :remember_me %>
                    <%= f.label :remember_me %>
                  </div>
                <% end -%>

                <div class="actions form-group">
                  <%= f.submit "Se connecter", class: "default-btn mid-button theme-color" %>
                </div>
              <% end %>

              <%= render "devise/shared/links" %>
      </div>
 </div>


