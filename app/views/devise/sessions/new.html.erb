<div class=" devise">
          <div class="connexion  ">
             <div class="panel">
                 <h2>Se connecter</h2>
                 <p>Veuillez entrer votre email et mot de passe</p>
             </div>
             <%= form_for(resource, as: resource_name,id:"Login", url: session_path(resource_name)) do |f| %> 

                <div class="form-group">

                    <%= f.text_field :login, autofocus: true, autocomplete: "pseudo", placeholder:"Votre pseudo", class:"form-control", id:"inputname"%>
                </div>

              <div class="form-group">
                  <%= f.password_field :password, autocomplete: "new-password",class:"form-control", id:"inputPassword1",placeholder:"Password" %>            
              </div>

            <% if devise_mapping.rememberable? -%>
              <div class="form-group">
                  <%= f.check_box :remember_me %>
                  <%= f.label :remember_me %>
              </div>

            <% end %>  
                  <%= f.submit "Se connecter",class:"default-btn mid-button theme-color" %>
            <% end %>
             <%= render "devise/shared/links" %>
          </div>
</div>

