<!--banner-->
<div class="banner banner-blog">
    <div class="container ">
        <div class="main-heading">
            <h1> Voici votre panier repas </h1>
        </div>
    </div>
</div>
<!--banner ends-->
<div class="recipes-home-body inner-page">
  <div class="container">
    <div class="row">
      <div class="col-md-8 col-lg-9">
        <div class="recipe-set">
            <div class="recipe-listing listing-grid">

              <% @meal_cart.meals.each do |meal| %>
              <div class="listing">
              	<h4>Repas n°<%= meal.id %></h4>
                <div class="image">
                  <a href="#">
                    <%= link_to  meal_path(meal.id) do%>
                        <% if meal.picture_url %>
                            <%= image_tag meal.picture_url %>
                        <% else %>
                            <%= image_tag('listing-1.jpg', alt: "image") %>
                        <% end %>
                    <%end%> 
                  </a>
                </div>

              <div class="detail">
                <h4>
                  <%= link_to meal.name, meal_path(meal.id)%>
                </h4>
                <p>
                    Nam ornare arcu turpis, nec congu Curabitur quis euismod. Nam ornare arcu turpis, nec congu Curabitur quis euismod. Nam ornare gsfg
                </p>
                  <div class="meta-listing">
                    <br>

					          <%= link_to 'retirer', delete_meal_path(meal.id), method: :delete, class:'default-btn mid-button theme-tag-color'%>

                  </div>
                </div>
              </div>
              <% end %>
              <br>


              
            </div class="cart-title">
            <% if @meal_cart.meals.count > 0 %>
                  <%= link_to 'Générer ma liste de courses', shopping_lists_generate_path, class:'default-btn mid-button theme-color' %>
              <% else %>
                  <h3> Votre panier est vide ! </h3>
              <% end %>
              


        </div>
      </div>
    </div>
  </div>
</div>
